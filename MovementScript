from gpiozero import Device, Robot

mdm=Robot((1,2),(3,4)) #Pin Numbers of Motors
#mdm-motor driver management

#Below this is code that would go into corresponding button presses

#Stop before movement to prevent any potential double-movement issues
#Double-Movement defined as attempting to continue another movement while following the new movement

#forward button press
#mdm.stop()
#mdm.forward()

#left button press
#mdm.stop()
#mdm.left()

#right button press
#mdm.stop()
#mdm.right()

#reverse button press
#mdm.stop()
#mdm.backward()

#stop button press
#mdm.stop()
